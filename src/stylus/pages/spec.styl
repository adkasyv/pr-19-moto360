sp = spec

.{sp}
    .{sp}-inner
        display grid
        grid-gap 7em
        @media mqMedium
            grid-gap 13em
        .{sp}-top
            display grid 
            grid-template-columns: repeat(2, 1fr)
            @media mqMedium
                grid-template-columns: repeat(1, 1fr)
                
            .{sp}-top__left
                display flex
                flex-direction column
                justify-content center
                @media mqMedium
                    padding 0 8em
                @media mqSmall
                    padding 0 6em
                @media mqExtraSmall
                    padding 0 2em
                .{sp}-h3
                    text-align left
                .{sp}-p
                    margin-top 2em
                    @media mqSmall
                        font-size 14px

            .{sp}-top__right
                position relative
                .{sp}-text
                    display flex
                    align-items center
                    justify-content center
                    .{sp}-h3
                        font-size: calc(80px + (90 + 90 * 0.7) * ((100vw - 320px) / 1170))
                        margin 0 auto
                .{sp}-img
                    width 500px
                    height 500px

                    position absolute
                    left 50%
                    margin-left: -250px

                    top 75%
                    margin-top -250px
                    
                    background: url(http://site.ru/fon.png) 100% 0 repeat-y
                    z-index 2

                    @media mqMedium
                        left 50%
                        margin-left -250px
                        top 50%
                        margin-top -150px
                    @media mqSmall
                        width 400px
                        height 400px
                        margin-left -200px
                        margin-top -100px
                    @media mqExtraSmall
                        width 300px
                        height 300px
                        margin-left -150px
                        margin-top 0
        .{sp}-bottom
            display grid 
            grid-template-columns: repeat(3, 1fr)
            .{sp}-bottom__item
                display grid
                justify-items center

