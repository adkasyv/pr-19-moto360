sp = spec

.{sp}
    .{sp}-inner
        display grid
        grid-gap 7em
        @media screen-md
            grid-gap 13em
        .{sp}-top
            display grid 
            grid-template-columns: repeat(2, 1fr)
            @media screen-md
                grid-template-columns: repeat(1, 1fr)
                // grid-template-columns repeat(auto-fill, minmax(500px, auto))
                
            .{sp}-top__left
                display flex
                flex-direction column
                justify-content center
                @media screen-md
                    padding 0 6em
                @media screen-sm
                    padding 0 4em
                @media screen-xs
                    padding 0 2em
                .{sp}-h3
                    text-align left
                .{sp}-p
                    margin-top 2em
                    @media screen-sm
                        font-size 14px

            .{sp}-top__right
                position relative
                .{sp}-text
                    display flex
                    align-items center
                    justify-content center
                    .{sp}-h3
                        // font-size: calc(80px + (90 + 90 * 0.7) * ((100vw - 320px) / 1170))
                        font-size 8em
                        @media screen-md 
                            font-size 5em
                        @media screen-sm 
                            font-size 3em
                .{sp}-img
                    width 500px
                    height 500px

                    position absolute
                    left 50%
                    margin-left: -250px

                    top 75%
                    margin-top -250px
                    
                    background: url(http://site.ru/fon.png) 100% 0 repeat-y
                    z-index 2

                    @media screen-md
                        left 50%
                        margin-left -250px
                        top 50%
                        margin-top -150px
                    @media screen-sm
                        width 300px
                        height 300px
                        margin-left -150px
                        margin-top 0px
                    @media screen-xs
                        width 300px
                        height 300px
                        margin-left -150px
                        margin-top 0
        .{sp}-bottom
            display grid 
            grid-template-columns: repeat(3, 1fr)
            .{sp}-bottom__item
                display grid
                justify-items center

