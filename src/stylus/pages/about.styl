.{ab}
    .{ab}-inner
        display grid 
        grid-template-columns: repeat(3, 1fr)
        align-items center
        grid-gap 3em
        @media mqMedium
            grid-template-columns repeat(1, 1fr)
            grid-template-rows 50% 50%
        @media mqSmall
            align-items normal
            grid-template-rows 15em 15em
        height 1130px
        width: 100%;
        .{ab}-img-svg
            display block

            width 30px
            height 30px
            margin 0 auto
            margin-top 3em
        .{ab}-h3
            margin-bottom 1em
            text-align center
            {mainColor}
        .{ab}-img
            @media mqMedium
                display none
        .{ab}-comfort
        .{ab}-performance
            @media mqMedium
                padding 0 8em
            @media mqSmall
                padding 0 6em
            @media mqExtraSmall
                padding 0 2em


