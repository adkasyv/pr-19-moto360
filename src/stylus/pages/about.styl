.{ab}
    .{ab}-inner
        display grid 
        grid-template-columns: repeat(3, 1fr)
        align-items center
        grid-gap 3em

        @media(max-width 991px)
            grid-template-columns: repeat(1, 1fr)
        @media(max-width 768px)
            align-items normal

        height 1130px
        width: 100%;
        .{ab}-img-svg
            width 30px
            height 30px

            display block
            margin 0 auto
            margin-top 3em
        .{ab}-h3
            margin-bottom 1em
            text-align center
            {mainColor}

            // width: 100%;
            // height: 100%;
        .{ab}-img
            @media(max-width 991px)
                display none


        .{ab}-comfort
        .{ab}-performance
            @media(max-width 991px)
                // height 1em
                padding 0 8em
            @media(max-width 768px)
                padding 0 6em
            @media(max-width 576px)
                padding 0 4em
            @media(max-width 376px)
                padding 0 2em


