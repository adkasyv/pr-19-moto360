// ft = footer

.footer
    margin-bottom 1em 
    .footer-inner
        display grid
        grid-gap 4em   

        .footer-contact
            display grid
            grid-template-columns repeat(2, 1fr)
            grid-gap 2em
            @media screen-sm
                grid-template-columns repeat(auto-fill,minmax(320px,auto));
                justify-items center
            .footer-contact__email
                .footer__p
                    margin-bottom 1em
                .form-control
                    width 20em
            .footer-contact__social
                display flex
                align-items center

                @media screen-xs
                    display grid
                    grid-template-columns repeat(auto-fill,minmax(320px,auto));

                .footer__p
                    text-align right    
                .footer-img  
                    display flex
                    justify-content space-between
                    .footer-img__item
                        margin-right 10px
                        width 30px
                        height 30px
        
        .footer-link
            display grid
            grid-template-columns: repeat(auto-fill,minmax(250px,auto));
            grid-gap 2em

        .footer-reserved
            text-align right
            margin-top 3em
            .footer-reserved__p
                @media screen-xs
                    text-align left
                    font-size 14px 
                
                        



