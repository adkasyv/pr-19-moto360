// ft = footer

.footer
    margin-bottom 1em 
    .footer-inner
        display grid
        grid-gap 4em   

        .footer-contact
            display grid
            grid-template-columns repeat(2, 1fr)
            grid-gap 2em
            @media screen-md
                grid-template-columns repeat(1, 1fr)
                justify-items center
            .footer-contact__email
                .email_p
                    margin-bottom 1em
                .form-control
                    width 20em
                    @media screen-sm
                        width 15em
            .footer-contact__social
                display grid
                align-items center
                grid-template-columns repeat(2, 1fr)
                grid-gap 1em
                @media screen-sm
                    grid-template-columns repeat(1, 1fr)
                .social_p
                    text-align right    
                    @media screen-md
                        text-align center
                .footer-img  
                    display flex
                    justify-content space-between
                    .footer-img__item
                        margin-right 10px
                        width 30px
                        height 30px
        
        .footer-link
            display grid
            grid-template-columns: repeat(auto-fill,minmax(250px,auto));
            grid-gap 2em

        .footer-reserved
            text-align right
            margin-top 3em
            .footer-reserved__p
                @media screen-xs
                    text-align left
                    font-size 14px 
                
                        



